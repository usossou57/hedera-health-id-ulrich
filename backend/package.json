{
  "name": "hedera-health-backend",
  "version": "1.0.0",
  "description": "Backend API pour Hedera Health ID MVP",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "vercel-build": "prisma generate && tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:setup": "node scripts/setup-database.js",
    "db:ensure": "node scripts/ensure-database-setup.js",
    "db:test": "node scripts/test-connection.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force",
    "db:migrate-custom": "node scripts/database-migration.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "contracts:compile": "node src/scripts/blockchain/compile.js",
    "contracts:deploy": "node src/scripts/blockchain/deploy-complete-system.js",
    "contracts:deploy:patient": "node src/scripts/blockchain/deploy-patient-contract.js",
    "contracts:deploy:access": "node src/scripts/blockchain/deploy-access-control.js",
    "contracts:test": "node src/scripts/blockchain/test-offline.js",
    "test:blockchain": "jest src/tests/blockchain --testTimeout=60000",
    "test:blockchain:services": "jest src/tests/blockchain/hedera-services.test.ts --testTimeout=60000",
    "test:blockchain:api": "jest src/tests/blockchain/api-routes.test.ts --testTimeout=60000",
    "test:blockchain:integration": "jest src/tests/blockchain/integration.test.ts --testTimeout=300000",
    "validate:integration": "node validate-integration.js"
  },
  "dependencies": {
    "@hashgraph/sdk": "^2.73.1",
    "@openzeppelin/contracts": "^5.4.0",
    "@prisma/client": "^5.7.1",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "qrcode": "^1.5.3",
    "redis": "^4.6.12",
    "solc": "^0.8.30",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/crypto-js": "^4.2.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/qrcode": "^1.5.5",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "prisma": "^5.7.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "keywords": [
    "hedera",
    "blockchain",
    "healthcare",
    "api",
    "typescript",
    "nodejs"
  ],
  "author": "Ares & Ulrich",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
