{
  "name": "hedera-health-id",
  "version": "1.0.0",
  "description": "Carnet de santé numérique décentralisé pour l'Afrique",
  "main": "index.js",
  "scripts": {
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build": "cd frontend && npm run build",
    "test": "cd backend && npm test",
    "deploy": "./deploy/deploy.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AresGn/hedera-health-id.git"
  },
  "keywords": [
    "hedera",
    "healthcare",
    "blockchain",
    "africa",
    "dlt"
  ],
  "author": "AresGn",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "axios": "^1.12.2"
  }
}
